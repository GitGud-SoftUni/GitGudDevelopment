@using GitGud.Models
@model IEnumerable<GitGud.Models.Category>

@{
    ViewBag.Title = "All categories";
}
<div class="container body-content">
    <div class="well">
        <h2>
            All Categories -
            <a asp-controller="Admin" asp-action="CreateCategory" class="btn btn-danger">Create New</a>
        </h2>
        <div class="row">
            <table class="table table-striped table-hover ">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var category in Model)
                    {
                        <tr>
                            <td><strong>@category.Name</strong></td>
                            <td>
                                <a href="#">Edit</a>
                                <a asp-controller="Admin" asp-action="DeleteCategory" asp-route-strCategoryId="@category.Id">Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>