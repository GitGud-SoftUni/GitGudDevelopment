@model GitGud.ViewModels.ShowUserViewModel
@{
    ViewBag.Title = "Show user";
}

@section scripts {
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    <script type="text/javascript" src="~/js/script.js"></script>

}

<div class="container">
    <div class="row">
        <h2 style="text-align:center">User <strong>@Model.User.UserName</strong> - Profile Details</h2>
    </div>
    <div class="row">
        <div class="panel-group col-md-9" id="accordion">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h4 class="panel-title">
                        <a data-toggle="collapse" data-parent="#accordion" href="#collapse1">
                            <i class="fa fa-user"></i><strong style="padding-left:5px">User details</strong>
                        </a>
                    </h4>
                </div>
                <div id="collapse1" class="panel-collapse collapse in">
                    <div class="panel-body">
                        <div class="row">
                            <table class="table table-hover">
                                <tr>
                                    <th>Names: </th>
                                    <td>
                                        @if (!string.IsNullOrEmpty(Model.User.FirstName))
                                        {
                                            <strong>@Model.User.FirstName</strong>
                                        }
                                        @if (!string.IsNullOrEmpty(Model.User.LastName))
                                        {
                                            <strong>@Model.User.LastName</strong>
                                        }
                                        @if (string.IsNullOrEmpty(Model.User.FirstName) && string.IsNullOrEmpty(Model.User.LastName))
                                        {
                                            <strong>(n/a)</strong>
                                        }
                                    </td>
                                </tr>
                                <tr>
                                    <th>Lives in: </th>
                                    <td>
                                        @if (!string.IsNullOrEmpty(Model.User.Town))
                                        {
                                            <strong>@Model.User.Town</strong>
                                        }
                                        else
                                        {
                                            <strong>(n/a)</strong>
                                        }
                                    </td>
                                </tr>
                                <tr>
                                    <th>Birthday: </th>
                                    <td>
                                        @if (Model.User.Birthday.Year != 1)
                                        {
                                            <strong>@(Model.User.Birthday.Date.ToString("d"))</strong>
                                        }
                                        else
                                        {
                                            <strong>(n/a)</strong>
                                        }
                                    </td>
                                </tr>
                                <tr>
                                    <th>Age: </th>
                                    <td>
                                        @if (Model.User.Birthday.Year != 1)
                                        {
                                            <strong>@Model.User.Age</strong>
                                        }
                                        else
                                        {
                                            <strong>(n/a)</strong>
                                        }

                                    </td>
                                </tr>
                            </table>
                        </div>
                        
                    </div>
                </div>
            </div>
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h4 class="panel-title">
                        <a data-toggle="collapse" data-parent="#accordion" href="#collapse2">
                            <i class="fa fa-music"></i><strong style="padding-left:5px">User songs</strong>
                        </a>
                    </h4>
                </div>
                <div id="collapse2" class="panel-collapse collapse">
                    <div class="panel-body">
                        <div class="row">
                            <table class="table table-hover">
                                @if (Model.User.Songs.Any())
                                {
                                    <thead>
                                        <tr>
                                            <th>Song</th>
                                            <th>Artist</th>
                                            <th>Date added</th>
                                            <th>Audio</th>
                                        </tr>
                                    </thead>
                                }
                                else
                                {
                                    <p style="text-align: center">No songs from user @User.Identity.Name available</p>
                                }
                                <tbody>
                                    @foreach (var song in Model.User.Songs)
            {
                                        <tr class="info">
                                            <td><a asp-controller="Song" asp-action="Details" asp-route-songId="@song.Id" style="margin:3px">@song.Name</a></td>
                                            <td><a asp-controller="Artist" asp-action="Artist" asp-route-artistName="@song.ArtistName" style="margin:3px">@song.ArtistName</a></td>
                                            <td>@song.DateUploaded.ToString("d")</td>
                                            <td>
                                                <audio controls preload="none">
                                                    <source src="~/uploads/@song.fileAdress" type="audio/ogg">
                                                    Your browser does not support the audio element.
                                                </audio>
                                            </td>
                                           
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h4 class="panel-title">
                        <a data-toggle="collapse" data-parent="#accordion" href="#collapse3">
                            <i class="fa fa-comments-o" aria-hidden="true"></i><strong style="padding-left:5px">User comments</strong>
                        </a>
                    </h4>
                </div>
                <div id="collapse3" class="panel-collapse collapse">
                    <div class="panel-body">
                        <div class="row">
                            <table class="table table-hover">
                                @if (Model.User.Comments.Any())
                                {
                                    <thead>
                                        <tr>
                                            <th>Content</th>
                                            <th>DateAdded</th>
                                            <th>Likes Count</th>
                                        </tr>
                                    </thead>
                                }
                                else
                                {
                                    <p style="text-align: center">No comments from user @User.Identity.Name available</p>
                                }
                                <tbody>
                                    @foreach (var comment in Model.User.Comments)
            {
                                        <tr class="info">

                                            <td>@comment.Content</td>
                                            <td>@comment.Date</td>
                                            <td>@comment.Likes.Count</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h4 class="panel-title">
                        <a data-toggle="collapse" data-parent="#accordion" href="#collapse4">
                            <i class="fa fa-heart" aria-hidden="false"></i><strong style="padding-left:5px">User favorites</strong>
                        </a>
                    </h4>
                </div>
                <div id="collapse4" class="panel-collapse collapse">
                    <div class="panel-body">
                        <table class="table table-hover">
                            @if (Model.User.Favs.Any())
                            {
                                <thead>
                                    <tr>
                                        <th>Song</th>
                                        <th>Artist</th>
                                        <th>Date added</th>
                                        <th>Category</th>
                                        <th>Favorited</th>
                                        <th>Uploader</th>
                                        <th>Audio</th>
                                    </tr>
                                </thead>
                            }
                            else
                            {
                                <p style="text-align: center">No favorites of user @User.Identity.Name available</p>
                            }
                            <tbody>
                                @foreach (var fav in Model.User.FavSongs)
            {
                                    <tr class="info">
                                        <td><a asp-controller="Song" asp-action="Details" asp-route-songId="@fav.Id" style="margin:3px">@fav.Name</a></td>
                                        <td><a asp-controller="Artist" asp-action="Artist" asp-route-artistName="@fav.ArtistName" style="margin:3px">@fav.ArtistName</a></td>
                                        <td>@fav.DateUploaded.ToString("d")</td>
                                        <td>@fav.Category.Name</td>
                                        <td>@fav.Favorites.Count times</td>
                                        <td>@fav.UploaderName</td>
                                        <td>
                                            <audio controls preload="none">
                                                <source src="~/uploads/@fav.fileAdress" type="audio/ogg">
                                                Your browser does not support the audio element.
                                            </audio>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>

                </div>
            </div>

        </div>
        <div class="col-md-3">
            <div class="thumbnail">
                @if (Model.User.fileAdress == null)
                {
                    <img src="~/images/default.jpg" alt="Default avatar" style="width: 100%">
                }
                else
                {
                    <a href="~/avatars/@Model.User.fileAdress" target="_blank">
                        <img src="~/avatars/@Model.User.fileAdress" alt="User picture" style="width: 100%">
                    </a>
                }

                <div class="caption">
                    <p><strong>Username: @Model.User.UserName</strong></p>
                    <p><strong>Email: @Model.User.Email</strong></p>
                </div>
                
            </div>
        </div>
    </div>
</div>