@model GitGud.ViewModels.CategoryViewModel

@{
    ViewBag.Title = "Edit Category";
}

@section scripts {
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}

<div class="container body-content span=8 offset=2">
    <div class="well">
        <form class="form-horizontal" asp-controller="Admin" asp-action="EditCategory" asp-route-categoryId="@ViewData["categoryId"]" method="post">
            <fieldset>
                <legend>Edit Category</legend>
                <div class="form-group">
                    <label class="col-sm-4 control-label">Category Name</label>
                    <div class="col-sm-4 ">
                        <input type="text" asp-for="CategoryName" class="form-control" placeholder="Category Name" value="@ViewData["categoryName"]">
                        <span asp-validation-for="CategoryName" class="text-muted text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-4 col-sm-offset-4">
                        <a class="btn btn-default" asp-controller="Admin" asp-action="AllCategories">Cancel</a>
                        <button type="submit" class="btn btn-success">Edit</button>
                    </div>
                </div>
            </fieldset>
        </form>
    </div>
</div>



