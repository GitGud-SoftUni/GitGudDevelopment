@model GitGud.Models.Song

@{
    ViewBag.Title = "Delete Song";
}

<div class="container body-content span=8 offset=2">
    <div class="well">
        <form class="form-horizontal" asp-controller="Song" asp-action="DeleteSong" asp-route-songId="@Model.Id" method="post">
            <fieldset>
                <legend>Delete Song</legend>
                <div class="form-group">
                    <label class="col-sm-4 control-label">Song Title</label>
                    <div class="col-sm-4 ">
                        <input type="text" class="form-control" placeholder="Song Title"
                               value="@Model.Name" disabled>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-4 control-label">Song Artist</label>
                    <div class="col-sm-4">
                        <input type="text" class="form-control" placeholder="Song Artist"
                               value="@Model.ArtistName" disabled>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-4 col-sm-offset-4">
                        <a class="btn btn-default" asp-controller="App" asp-action="Browse">Cancel</a>
                        <button type="submit" class="btn btn-primary">Delete</button>
                    </div>
                </div>
            </fieldset>
        </form>
    </div>
</div>

