@model IEnumerable<GitGud.Models.Song>
@{
    ViewBag.Title = "Browse";
}
<div class="container">
    <table class="table table-striped table-hover ">
        <thead>
            <tr>
                <th>Song</th>
                <th>Artist</th>
                <th>Date added</th>
                <th>Uploader</th>
                <th>Audio</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var song in Model)
            {
                <tr class="info">
                    <td>@song.Name</td>
                    <td>@song.ArtistName</td>
                    <td>@song.DateUploaded.ToString("d")</td>
                    <td>@song.UploaderName</td>
                    <td>
                        <audio controls preload="none">
                            <source src="~/uploads/@song.fileAdress" type="audio/ogg">
                            Your browser does not support the audio element.
                        </audio>
                    </td>

                    <td>
                        <a asp-controller="Song" asp-action="DeleteSong" asp-route-song="@song" class="btn btn-danger">Delete</a>
                    </td>
                </tr>

            }

        </tbody>

    </table>
</div>