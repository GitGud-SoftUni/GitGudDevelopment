            </div><!-- /.carousel -->

        </div>
    </div>
    <div class="row">
            <div class="col-md-6">
                <h2 style="text-align:center">Popular tags:</h2>
                <ul class="pager">
                    @if (Model.Count > 0)
                    {
                        @foreach (var tag in Model)
                        {
                            <li><a asp-controller="Tag" asp-action="Details" asp-route-tagName="@tag" style="margin:3px">@tag</a></li>
                        }
                    }
                    else
                    {
                        <li>No tags to display :(</li>
                    }
