@model GitGud.Models.Song

@{
    ViewBag.Title = "Hot Tracks";
}


@if (User.IsInRole("Admin"))
{
    <h1 style="text-align: center"> <a asp-controller="Admin" asp-action="#" class="btn btn-default">Edit</a> </h1>


}

<h1 style="text-align: center">Hot Tracks</h1>


<div class="container body-content">
    <div class="well">
        
        @if (User.IsInRole("Admin"))
        {
            <h1 style="text-align: center">Hot Tracks - <a asp-controller="Admin" asp-action="#" class="btn btn-default">Edit</a></h1>


        }
        else
        {
            <h1 style="text-align: center">Hot Tracks</h1>


        }

        

        <div class="row">
            <table class="table table-striped table-hover ">
                
                <thead>
                    
                    <tr>
                        <th>№</th>
                        <th>Song</th>
                        <th>Artist</th>
                        <th>Uploader</th>
                        <th>Audio</th>
                    </tr>

                </thead>

                <tbody>

                    
                    @for (int i = 1; i <= 10; i++)
                    {
                        
                        <tr>
                            <td>@i</td>
                            <td><a asp-controller="Song" asp-action="Details" asp-route-songId="@Model" style="margin:3px">@Model</a></td>
                            <td><a asp-controller="Artist" asp-action="Artist" asp-route-artistName="@Model" style="margin:3px">@Model</a></td>

                        </tr>
                    }


                    <tr>

                        <td>1</td>
                        <td><a asp-controller="Song" asp-action="Details" asp-route-songId="@Model" style="margin:3px">@Model</a></td>

                    </tr>
                    
                    
                    <tr><td>2</td></tr>
                    <tr><td>3</td></tr>
                    <tr><td>4</td></tr>
                    <tr><td>5</td></tr>
                    <tr><td>6</td></tr>
                    <tr><td>7</td></tr>
                    <tr><td>8</td></tr>
                    <tr><td>9</td></tr>
                    <tr><td>10</td></tr>

                </tbody>

            </table>
        </div>

    </div>
</div>

























